<!--FOUNDER-->
<div class="row">
    <div class="col">
        <h1 style="text-align:center"><u>FOUNDER</u></h1>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <!--USER AVI-->
        <img src="@Model.Founder.Avi" class="rounded-circle img-fluid mx-auto" alt="awaken." style="width:100px;height:100px;" />
    </div>
    <div class="col-md-7">
        <!--USER TAG-->
        <p class="lead">
            Tag: @Model.Founder.Tag
        </p>
        <!--MAINS-->
        <p class="lead">
            Main: <img src="@Model.Founder.Main" alt="peach" style="width:50px;height:50px;" />
        </p>
        <!--DISCORD-->
        <p class="lead"><i class="fab fa-discord"></i> @Model.Founder.Discord</p>
        <p class="lead">
            <!--About player info-->
            @Model.Founder.AboutMe
        </p>
        <p class="lead">
            <!--Links for social media-->
            <a href="@Model.Founder.Twitch" class="fab fa-twitch fa-fw" target="_blank"></a>
            <a href="@Model.Founder.Twitter" class="fab fa-twitter fa-fw" target="_blank"></a>
            <a href="@Model.Founder.Instagram" class="fab fa-instagram fa-fw" target="_blank"></a>
            <a href="@Model.Founder.Youtube" class="fab fa-youtube fa-fw" target="_blank"></a>
            <a href="@Model.Founder.Mixer" class="fab fa-mixer fa-fw" target="_blank"></a>
        </p>
    </div>
</div>

<br />
<br />

<hr />

<br />
<br />



<!--MODS-->
<div class="row">
    <div class="col">
        <h1 style="text-align:center"><u>THE MODS</u></h1>
    </div>
</div>

@foreach (var mods in Model.Mods)
{

<div class="row">
    <div class="col-md-2">
        <!--USER AVI-->
        <img src= "@mods.Avi" class="rounded-circle img-fluid mx-auto" alt="mods avi" style="width:100px;height:100px;" />
    </div>
    <div class="col-md-7">
        <!--USER TAG-->
        <p class="lead">
            Tag: @mods.Tag
        </p>
        <!--MAINS-->
        <p class="lead">
            Main: <img src="@mods.Main" alt="mods mains" style="width:50px;height:50px;" />
        </p>
        <!--DISCORD-->
        <p class="lead"><i class="fab fa-discord"></i> @mods.Discord</p>
        <p class="lead">
            <!--About player info-->
            @mods.AboutMe
        </p>
        <p class="lead">
            <!--Social Media Links-->
            <a href="@mods.Twitch" class="fab fa-twitch fa-fw" target="_blank"></a>
            <a href="@mods.Twitter" class="fab fa-twitter fa-fw" target="_blank"></a>
            <a href="@mods.Instagram" class="fab fa-instagram fa-fw" target="_blank"></a>
            <a href="@mods.Youtube" class="fab fa-youtube fa-fw" target="_blank"></a>
            <a href="@mods.Mixer" class="fab fa-mixer fa-fw" target="_blank"></a>
        </p>
    </div>
</div>
}

<br />
<br />

<hr />

<br />
<br />

<!--VOICES-->
<div class="row">
    <div class="col">
        <h1 style="text-align:center"><u>THE VOICES</u></h1>
    </div>
</div>

@foreach (var voices in Model.Voices)
{

<div class="row">
    <div class="col-md-2">
        <!--USER AVI-->
        <img src= "@voices.Avi" class="rounded-circle img-fluid mx-auto" alt="voices avi" style="width:100px;height:100px;" />
    </div>
    <div class="col-md-7">
        <!--USER TAG-->
        <p class="lead">
            Tag: @voices.Tag
        </p>
        <!--Mains-->
        <p class="lead">
            Main(s): <img src= "@voices.Main" alt="voices main" style="width:50px;height:50px;" />
        </p>
        <!--About player info-->
        <p class="lead">
            @voices.AboutMe
        </p>
        <p class="lead">
            <!--Social Media Links-->
            <a href="@voices.Twitch" class="fab fa-twitch fa-fw" target="_blank"></a>
            <a href="@voices.Twitter" class="fab fa-twitter fa-fw" target="_blank"></a>
            <a href="@voices.Instagram" class="fab fa-instagram fa-fw" target="_blank"></a>
            <a href="@voices.Youtube" class="fab fa-youtube fa-fw" target="_blank"></a>
            <a href="@voices.Mixer" class="fab fa-mixer fa-fw" target="_blank"></a>
        </p>
    </div>
</div>
}

